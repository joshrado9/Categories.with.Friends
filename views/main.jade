doctype html
html(lang="en")
  head
    title= title
    link(rel="stylesheet", href="css/bootstrap.css", type="text/css")
    link(rel="stylesheet", href="css/main.css", type="text/css")
  body(style="background-color:orange")

    div(class="container")
      div(class="jumbotron")
        h1(class="game-text" align="center" id="cate" style="color:red") Categories with Friends!           
      div(class="row")
        div(class="col-xs-8")
          div(id="help-text", class="game-text" style="display: none") Enter the answers to the Categories, then click Submit       
        div(class="col-xs-4")
          div(class="row")
        div(align="center")
          button(class="btn btn-info" id="ready" onclick="start()") Ready?
       
    form(class="form-horizontal" id="inputting" action="https://categories-with-friends.mybluemix.net/check" method="GET" style="display: none; font-size: 24px")
      div(class="form-group") 
        label(class="control-label col-sm-2") #{value[1]}
        input(id="test", type="text", size="30", name="one") 
      div(class="form-group") 
        label( class="control-label col-sm-2") #{value[2]}
        input(id="test", type="text", size="30" ,name="two" ) 
      div(class="form-group") 
        label( class="control-label col-sm-2") #{value[3]}
        input(id="test", type="text", size="30" ,name="three" ) 
      div(class="form-group") 
        label( class="control-label col-sm-2") #{value[4]}
        input(id="test", type="text", size="30" ,name="four") 
      div(class="form-group") 
        label( class="control-label col-sm-2") #{value[0]}
        input(id="test", type="text", size="30" ,name="five") 
      div(class = "form-group")
        div(class="col-sm-offset-2 col-sm-10")
          input(type="submit" value="Submit")
     
     div(class="row")
       div(class="col-xs-8") 
       div(id="score", class="col-xs-4", style="display: none; font-size: 24px") Time Left: 
          input(class="form-control input-lg" id="timer" type="text" ) 
     div(class="row")
       div(class="col-xs-8") 
       div(class="col-xs-4")         
         div(id="power" style="display: none") Letter: #{letr}          
      
  script(src="js/jquery.js", type="text/javascript")
  script(src="js/bootstrap.js", type="text/javascript")
  script(src="js/main.js", type="text/javascript")
