doctype html
html(lang="en")
  head
    title= title
    link(rel="stylesheet", href="css/bootstrap.css", type="text/css")
    link(rel="stylesheet", href="css/main.css", type="text/css")
  body(style="background-color:orange")

    div(class="container")
      h1(class="game-text") Categpries with Friends!
      div(class="row")
        div(class="col-xs-8")
          div(id="word-description")        
        div(class="col-xs-4")
           div(id="score") Score:        
           
      div(class="row")
        div(class="col-xs-8")
          table()
            tr() ?
            
        div(class="col-xs-4")
          div(id="power") Power:            
      div(class="row")
        div(class="col-xs-8")
          div(id="help-text", class="game-text") Enter the answers to the Categories       
        div(class="col-xs-4")
          div(class="row")
            div(class="col-xs-12")
              button(id="skip-button" class="btn btn-info btn-xs") Skip this word
            div(class="col-xs-12")
              button(id="help-letter-button" class="btn btn-info btn-xs" onclick="submit()") Submit
       
       form(action="https://categories-with-friends.mybluemix.net/check" method="POST")
         div() Category
           input(type="text" size="30")
         input(type="submit" value="Submit")
          
      
    script(src="js/jquery.js", type="text/javascript")
    script(src="js/bootstrap.js", type="text/javascript")
    script(src="js/main.js", type="text/javascript")