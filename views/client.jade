doctype html
html(lang="en")

  head
    link(rel="stylesheet", href="css/bootstrap.css", type="text/css")
    link(rel="stylesheet", href="css/hiscores.css", type="text/css")
  body(style="background-color: blue")     
    section()
      h1(id="header") 
        table(id="Your guesses" style="font-size: 25px")
        table()
          tr()
            td()
              | Your Answers
              td() The Computer's output  
              tr()
              th(class="table-header" id="ans1") #{answer[0]}
              td(id="cpu1") #{cpu[0]}   
                if answer[4] == '' 
                  td(class="scores") Points!
                else
                  td(class="scores") No Points!       
                tr() 
              th(class="table-header" id="ans2") #{answer[1]}
              td(id="cpu12") #{cpu[0]}                
                if answer[4] == '' 
                  td(class="scores") Points!
                else
                  td(class="scores") No Points!       
                tr()
              th(class="table-header" id="ans3") #{answer[2]}
              td(id="cpu3") The Computer's output              
                if answer[4] == '' 
                  td(class="scores") Points!
                else
                  td(class="scores") No Points!       
                tr()
              th(class="table-header" id="ans4") #{answer[3]}
              td(id="cpu4") The Computer's output                                
                if answer[4] == '' 
                  td(class="scores") Points!
                else
                  td(class="scores") No Points!    
                tr()
              th(class="table-header" id="ans5") #{answer[4]}  
              td(id="cpu5") The Computer's output                
                if answer[4] == '' 
                  td(class="scores") Points!
                else
                  td(class="scores") No Points!
                tr()
        

              
        
      div(style="padding-top:30px;")
        button(class="btn btn-primary", onclick="score()") Check Score!
        div(class="divider")
        a(id="playagain" class="btn btn-success", href="/play" style="display: none; font-size:50px") Play again!
      
    script(src="js/jquery.js", type="text/javascript")
    script(src="js/bootstrap.js", type="text/javascript")
    script(src="js/client.js", type="text/javascript")