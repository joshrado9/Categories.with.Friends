doctype html
html(lang="en")

  head
    link(rel="stylesheet", href="css/bootstrap.css", type="text/css")
    link(rel="stylesheet", href="css/hiscores.css", type="text/css")
  body(style="background-color: blue")     
    section()
      h1(id="header") 
        table(id="Your guesses" style="font-size: 25px")
        table()
          tr()
            td()
              | Your Answers
              td() The Computer's output  
              tr()
              th(class="table-header" id="ans1") #{answer[0]}
              td() #{cpu[0]}   
                if ( answer[0] != '' && (answer[0].toLowerCase() != cpu[0].toLowerCase() || cpu[0] == '') )
                  td(class="scores" id="cpu1") +1
                else
                  td(class="scores" id="cpu1") No Points!       
                tr() 
              th(class="table-header" id="ans2") #{answer[1]}
              td() #{cpu[1]}                
                if ( answer[1] != '' && (answer[1].toLowerCase() != cpu[1].toLowerCase() || cpu[1] == '') )
                  td(class="scores" id="cpu2") +1
                else
                  td(class="scores" id="cpu2") No Points!       
                tr()
              th(class="table-header" id="ans3") #{answer[2]}
              td() #{cpu[2]}             
                if ( answer[2] !== '' && (answer[2].toLowerCase() !== cpu[2].toLowerCase() || cpu[1] === '') )
                  td(class="scores" id="cpu3") +1
                else
                  td(class="scores" id="cpu3") No Points!       
                tr()
              td()
                td() 
                td(class="scores" id="cpu3") total: #{total}
              
        
      div(style="padding-top:30px;")
        button(class="btn btn-primary", onclick="score()") Check Score!
        div(class="divider")
        a(id="playagain" class="btn btn-success", href="/play" style="display: none; font-size:50px") Play again!
        a(id="hiscore" class="btn btn-warning", href="/hi" style="display: none; font-size:50px") Submit Scores!
      
    script(src="js/jquery.js", type="text/javascript")
    script(src="js/bootstrap.js", type="text/javascript")
    script(src="js/client.js", type="text/javascript")