doctype html
html(lang="en")
  head
    link(rel="stylesheet", href="css/bootstrap.css", type="text/css")
    link(rel="stylesheet", href="css/hiscores.css", type="text/css")
  body()

    div(class="container" style="background-color: blue") 
      h1(id="header") #{title}
      table(id="hiscore_table")
        tr()
          th(class="table-header") Score
          th(class="table-header") Name
          th(class="table-header") Date
        tr()
          th(class="table-header") 100
          th(class="table-header") Hoffman
          th(class="table-header") 4/1/16         
      div(style="padding-top:30px;")
        a(class="btn btn-info", href="/play") Play!
        div(class = "divider1")
        a(class="btn btn-info", href="/hi") Scores!
      
    script(src="js/jquery.js", type="text/javascript")
    script(src="js/bootstrap.js", type="text/javascript")
    script(src="js/hiscores.js", type="text/javascript")